"--------------
" defaults.vim
"--------------
unlet! skip_defaults_vim
source $VIMRUNTIME/defaults.vim

"--------------
" Search
"--------------
set hlsearch
set ignorecase
set wrapscan
set incsearch

"--------------
" Display
"--------------
set number
set listchars=tab:^\ ,trail:~

"--------------
" Input
"--------------
set expandtab
set tabstop=4
set shiftwidth=0
